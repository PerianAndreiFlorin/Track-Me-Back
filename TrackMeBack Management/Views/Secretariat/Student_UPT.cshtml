@model TrackMeBack_Management.Models.Utilizator.Editare_Student_Model
@using TrackMeBack_Management.Clase_Utilitare.Servicii
@using TrackMeBack_Management.Clase_Utilitare.Management
@{
    List<List<string>> lista_studenti = Servicii_ListareMongoDB.Listare_Student_Facultate(Management_UtilizatorCurent.Departament_Secretariat());
    ViewData["Title"] = "Student UPT";
}

<div style="background-color:white;position:absolute;left:0;bottom:0;width:100%;height:100%;z-index:-6"></div>

<div class="aliniere_orizontal" style="position:absolute;left:2%;top:15%">

    <div class="aliniere_vertical" style="margin-right:100px">

        <h4>Editarea Manuală a Studenților UPT</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Student_UPT">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group" style="width:300px">
                        <label asp-for="marca" class="control-label">Marca</label>
                        <input list="studenti" asp-for="marca" class="form-control" />
                        <datalist id="studenti">
                            @foreach (var student in lista_studenti)
                            {
                                <option value="@student[0]" />
                            }
                        </datalist>
                        <span asp-validation-for="marca" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="width:300px">
                        <label asp-for="actiune" class="control-label"></label>
                        <select asp-for="actiune" class="form-control">
                            <option value="Editare">Editare</option>
                            <option value="Adaugare">Adăugare</option>
                            <option value="Stergere">Ștergere</option>
                        </select>
                    </div>
                    <div class="form-group" style="width:300px">
                        <label asp-for="nume" class="control-label"></label>
                        <input asp-for="nume" class="form-control" />
                        <span asp-validation-for="nume" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="width:300px">
                        <label asp-for="prenume" class="control-label"></label>
                        <input asp-for="prenume" class="form-control" />
                        <span asp-validation-for="prenume" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="width:300px">
                        <label asp-for="grupa" class="control-label"></label>
                        <select asp-for="grupa" class="form-control">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                        </select>
                    </div>
                    <div class="form-group" style="width:300px">
                        <label asp-for="an_Studiu" class="control-label"></label>
                        <select asp-for="an_Studiu" class="form-control">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                        </select>
                    </div>
                    <div class="form-group" style="width:300px">
                        <label asp-for="facultate" class="control-label"></label>
                        <select asp-for="facultate" class="form-control">
                            <option value="@Management_UtilizatorCurent.Departament_Secretariat()">@Management_UtilizatorCurent.Departament_Secretariat()</option>
                        </select>
                    </div>
                    <div class="form-group" style="width:300px">
                        <label asp-for="specializare" class="control-label"></label>
                        <select asp-for="specializare" class="form-control">
                            <option value="INFO">INFO</option>
                            <option value="CTI">CTI</option>
                            <option value="IS">IS</option>
                        </select>
                    </div>
                    <div class="form-group" style="width:300px">
                        <label asp-for="parola" class="control-label"></label>
                        <input asp-for="parola" class="form-control" />
                        <span asp-validation-for="parola" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Salvează" style="margin-top:10px" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

    </div>

    <hr style="height:500px;width:1px;margin-right:100px" />

    <div class="aliniere_vertical" style="width:750px">
        <h4>Lista Studenților UPT</h4>
        <hr />
        <div style="overflow:scroll;height:400px">
            <table border="1" style="text-align:center">
                <th>Marca</th>
                <th>Nume</th>
                <th>Prenume</th>
                <th>Specializare</th>
                <th>Email</th>
                <tbody>
                    @foreach (List<string> student in lista_studenti)
                    {
                        <tr style="border:solid;border-width:1px">
                            @foreach (string detaliu in student)
                            {
                                @if (detaliu != "-")
                                {
                                    <td style="border:solid;border-width:1px;width:200px">@detaliu</td>
                                }
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <hr style="margin-top:10px;margin-bottom:10px" />
        <div class="aliniere_vertical" style="width:300px;margin-top:25px">
            <h4 style="width:500px">Agăugarea Profesorilor - Microsoft Excel</h4>
            <hr style="width:500px" />
            <div class="aliniere_orizontal" style="width:500px">
                <a class="btn btn-primary" style="height:50px;width:350px;margin-right:25px" href="ms-excel:ofe|u|file:///C:/Users/Adeus/source/repos/TrackMeBack Management/Models/Fisiere_Excel/Excel_Student.xlsx">Deschide în Excel</a>
                <a class="btn btn-primary" style="height:50px;width:350px" asp-action="Adaugare_Student_Excel" asp-controller="Secretariat">Salvează datele Excel</a>
            </div>
        </div>
    </div>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@* Afișarea Mesajelor de Informare și Eroare. *@
@if (TempData["Mesaj_Eroare"] != null)
{
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    <script type="text/javascript">
        toastr.error('@TempData["Mesaj_Eroare"]');
    </script>
}

@if (TempData["Mesaj_Info"] != null)
{
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    <script type="text/javascript">
        toastr.info('@TempData["Mesaj_Info"]');
    </script>
}

