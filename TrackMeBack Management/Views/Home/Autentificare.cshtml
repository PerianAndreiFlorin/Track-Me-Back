@model TrackMeBack_Management.Models.Autentificare.Autentificare_Model
@{
    ViewData["Title"] = "Autentificare";
}

<div class="autentificare_card aliniere_vertical" style="position:absolute;left:0;height:100%;width:500px;z-index:-1;padding-top:15%">

        <h1>Autentificare</h1>
        <hr />

        <div class="aliniere_orizontal">
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Autentificare">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group" style="margin-bottom:5px;width:300px">
                                <label asp-for="email" class="control-label"></label>
                                <input asp-for="email" class="form-control"/>
                                <span asp-validation-for="email" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="width:300px">
                                <label asp-for="parola" class="control-label"></label>
                                <input asp-for="parola" class="form-control"/>
                                <span asp-validation-for="parola" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="LogIn" class="btn btn-primary" style="margin-top:10px" />
                            </div>
                        </form>
                    </div>

                    <div class="text-muted" style="margin-top:25px">
                        <a style="text-decoration:none" asp-area="" asp-controller="Home" asp-action="Resetare_Parola">Ai uitat parola?</a>
                    </div>
                </div>
        </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@* Afișarea Mesajelor de Informare și Eroare. *@
@if(TempData["Mesaj_Eroare"]!=null)
{
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    <script type="text/javascript">
        toastr.error('@TempData["Mesaj_Eroare"]');
    </script>
}

@if (TempData["Mesaj_Info"] != null)
{
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    <script type="text/javascript">
        toastr.info('@TempData["Mesaj_Info"]');
    </script>
}