@model TrackMeBack_Management.Models.Discipline.Editare_Discipline_Model
@using TrackMeBack_Management.Clase_Utilitare.Servicii
@{
    List<List<string>> lista_profesori = Servicii_ListareMongoDB.Listare_Profesor_Facultate("AC");
    List<List<string>> lista_discipline = Servicii_ListareMongoDB.Listare_Discipline_UPT("INFO");
    ViewData["Title"] = "Discipline UPT";
}

<div style="background-color:white;position:absolute;left:0;bottom:0;width:100%;height:100%;z-index:-6"></div>

<div class="aliniere_orizontal" style="position:absolute;left:2%;top:10%">

    <div class="aliniere_vertical" style="margin-right:100px">

        <h4>Discipline UPT</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Discipline_UPT">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group" style="width:300px">
                        <label asp-for="actiune" class="control-label"></label>
                        <select asp-for="actiune" class="form-control">
                            <option value="Editare">Editare</option>
                            <option value="Adaugare">Adăugare</option>
                            <option value="Stergere">Ștergere</option>
                        </select>
                    </div>
                    <hr style="width:300px" />

                    <div class="form-group" style="width:300px;margin:5px">
                        <label asp-for="materie" class="control-label"></label>
                        <input asp-for="materie" class="form-control" />
                        <span asp-validation-for="materie" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="width:300px;margin:5px">
                        <label asp-for="specializare" class="control-label"></label>
                        <select asp-for="specializare" class="form-control">
                            <option value="INFO">INFO</option>
                            <option value="CTI">CTI</option>
                        </select>
                    </div>
                    <div class="form-group" style="width:300px;margin:5px">
                        <label asp-for="an" class="control-label"></label>
                        <select asp-for="an" class="form-control">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                        </select>
                    </div>
                    <div class="form-group" style="width:300px;margin:5px">
                        <label asp-for="semestru" class="control-label"></label>
                        <select asp-for="semestru" class="form-control">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                            <option value="8">8</option>
                        </select>
                    </div>
                    <div class="form-group" style="width:300px;margin:5px">
                        <label asp-for="profesor_curs" class="control-label"></label>
                        <select asp-for="profesor_curs" class="form-control">
                            @foreach (List<string> profesor in lista_profesori)
                            {
                                <option value="@profesor[0]">@profesor[1] @profesor[2]</option>
                            }
                        </select>
                    </div>
                    <div class="form-group" style="width:300px;margin:5px">
                        <label asp-for="profesor_laborator" class="control-label"></label>
                        <select asp-for="profesor_laborator" class="form-control">
                            @foreach (List<string> profesor in lista_profesori)
                            {
                                <option value="@profesor[0]">@profesor[1] @profesor[2]</option>
                            }
                        </select>
                    </div>
                    <div class="form-group" style="width:300px;margin:5px">
                        <label asp-for="profesor_laborator_2" class="control-label"></label>
                        <select asp-for="profesor_laborator_2" class="form-control">
                            <option value="-">Fără</option>
                            @foreach (List<string> profesor in lista_profesori)
                            {
                                <option value="@profesor[0]">@profesor[1] @profesor[2]</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Modifică" class="btn btn-primary" />
                    </div>
                </form>
                <h6 class="text-muted" style="width:300px">Pentru acțiunea de ștergere este necesară atât Materia cât și Specializarea.</h6>
            </div>
        </div>

    </div>

    <div class="aliniere_vertical">
        <h4>Lista Disciplinelor UPT</h4>
        <hr />
        <div style="overflow:scroll;height:400px;width:1000px">
            <table border="1" style="text-align:center">
                <th>Materie</th>
                <th>Specializare</th>
                <th>An</th>
                <th>Semestru</th>
                <th>Profesor Curs</th>
                <th>Profesor Laborator 1</th>
                <th>Profesor Laborator 2</th>
                <tbody>
                    @foreach (List<string> disciplina in lista_discipline)
                    {
                            <tr style="border:solid;border-width:1px">
                                @foreach (string detaliu in disciplina)
                                {
                                <td style="border:solid;border-width:1px;width:200px">@detaliu</td>
                                }
                            </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="aliniere_vertical" style="width:300px;margin-top:25px">
            <h4 style="width:500px">Agăugarea Sălilor - Microsoft Excel</h4>
            <hr style="width:500px" />
            <div class="aliniere_orizontal" style="width:500px">
                <a class="btn btn-primary" style="height:50px;width:350px;margin-right:25px" href="ms-excel:ofe|u|file:///C:/Users/Adeus/source/repos/TrackMeBack Management/Models/Fisiere_Excel/Excel_Discipline.xlsx">Deschide în Excel</a>
                <a class="btn btn-primary" style="height:50px;width:350px" asp-action="Adaugare_Disciplina_Excel" asp-controller="Administrator">Salvează datele Excel</a>
            </div>
        </div>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    @* Afișarea Mesajelor de Informare și Eroare. *@
    @if (TempData["Mesaj_Eroare"] != null)
    {
        <script src="/lib/jquery/dist/jquery.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

        <script type="text/javascript">
            toastr.error('@TempData["Mesaj_Eroare"]');
        </script>
    }

    @if (TempData["Mesaj_Info"] != null)
    {
        <script src="/lib/jquery/dist/jquery.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

        <script type="text/javascript">
            toastr.info('@TempData["Mesaj_Info"]');
        </script>
    }
}
