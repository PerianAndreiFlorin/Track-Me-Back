@{
    ViewData["Title"] = "Administrator";
    ViewData["LogOut"] = true;
}

    <div class="aliniere_orizontal">

        <div class="vertical_card aliniere_vertical" style="margin-top:20%">
            <h1>Secretariat</h1>
            <hr />
            <p class="text-muted">Editarea și confirmarea email-urilor administrative.</p>
            <img style="width:150px;height:auto;align-self:center;margin-bottom:25px;margin-top:35px" src="~/imagini_svg/email.svg" />
            <a style="margin-top:50px" class="btn btn-primary" asp-action="Conturi_Admin">Deschide</a>
        </div>

        <div class="aliniere_vertical vertical_card" style="margin-top:20%;margin-left:50px;margin-right:50px">
            <h1>Disciplină</h1>
            <hr />
            <p class="text-muted">Adăugarea și editarea materiilor pentru fiecare an de studiu.</p>
            <img style="width:150px;height:auto;align-self:center;margin-bottom:25px;margin-top:35px" src="~/imagini_svg/discipline.svg" />
            <a style="margin-top:50px" class="btn btn-primary" asp-action="Discipline_UPT">Deschide</a>
        </div>

        <div class="aliniere_vertical vertical_card" style="margin-top:20%;margin-left:50px;margin-right:50px">
            <h1>Profesori</h1>
            <hr />
            <p class="text-muted">Editarea profesorilor pentru fiecare facultate.</p>
            <img style="width:150px;height:auto;align-self:center;margin-bottom:25px;margin-top:35px" src="~/imagini_svg/profesor.svg" />
            <a style="margin-top:50px" class="btn btn-primary" asp-action="Profesori_UPT">Deschide</a>
        </div>

        <div class="aliniere_vertical vertical_card" style="margin-top:20%">
            <h1>Clădiri și QR</h1>
            <hr />
            <p class="text-muted">Adăugarea sălilor pentru clădirile UPT cu codurile QR aferente.</p>
            <img style="width:150px;height:auto;align-self:center;margin-bottom:25px;margin-top:35px" src="~/imagini_svg/cladire.svg" />
            <a style="margin-top:50px" class="btn btn-primary" style="width:auto" asp-action="Harta_UPT">Deschide</a>
        </div>

    </div>
